<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:background="#B0B0B0">
	<TextView android:id="@+id/textView1" android:layout_height="wrap_content"
		android:gravity="center_horizontal" android:text="A textview in text layout"
		android:textSize="18sp" android:layout_width="fill_parent"
		android:layout_marginTop="10dp" android:textColor="#FFFFFF"></TextView>
	<TextView android:layout_height="wrap_content" android:id="@+id/textView2"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="center_horizontal" android:text="A large textview in the text layout"
		android:layout_width="fill_parent" android:layout_marginTop="10dp"></TextView>
</LinearLayout>
