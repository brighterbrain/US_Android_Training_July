<merge xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" android:layout_marginTop="30dp">
	<TextView android:layout_height="wrap_content" android:text="Text in the Merge layout"
		android:id="@+id/tv_merge" android:textSize="18sp"
		android:layout_width="fill_parent" android:gravity="center_horizontal"
		android:layout_marginTop="50dp"></TextView>
	<Button android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/button_merge"
		android:text="Button in merge layout" android:layout_gravity="center_horizontal"
		android:layout_marginTop="20dp"></Button>
</merge>
