<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Using a ViewStub"
		android:gravity="center_horizontal" android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp" android:textSize="20sp" />

	<Button android:id="@+id/showStubButton" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Open ViewStub, Bob!" />

	<ViewStub android:id="@+id/viewStub1" android:inflatedId="@+id/showquestions"
		android:layout="@layout/question_layout" android:layout_gravity="bottom"
		android:layout_height="fill_parent" android:layout_width="fill_parent"></ViewStub>

</LinearLayout>
